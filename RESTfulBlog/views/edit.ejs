<%- include("partials/header") %>

<div class= "ui main text container segment">
	<div class ="ui huge header">
		Edit <%=blog.title%>
	</div>
	<form class="ui form"  action="/blogs/<%=blog._id%>?_method=PUT" method = "POST" enctype="multipart/form-data">
		<div class ="field">
			<label>Title</label>
			<input type="text" name ="title" value="<%=blog.title%>">
		</div>
		
		<div class ="field">
			<label>Image Url</label>
			<input type="text" name = "image" value="<%=blog.image%>">
		</div>
		
		<div class="field">
			<label>Local Upload</label>
			<input type ="file" name = "imageFile" >
		</div>

		<div class ="field">
			<label>Content</label>
			<!-- <input type="text" name = "blog[body]" placeholder="blog post goes here"> -->
		<textarea name = "body"><%=blog.body%></textarea>
		</div>
		<input class = "ui violet big basic button"type="submit">
		
	</form>
</div>

<%- include("partials/footer") %>